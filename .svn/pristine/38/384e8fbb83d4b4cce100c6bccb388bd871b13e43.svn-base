		{
			for(User_V1_01 user : liste.get(i).getUserlist())
			{
				if(user.getId() == userid)
				{
					for(Playsheet_V1_01 ps : liste.get(i).getPlaysheets())
					{
						if(ps.getOwner_id() == userid)
						{
							Playsheet_V1_01_DaO p = new Playsheet_V1_01_DaO();
							
							try {
